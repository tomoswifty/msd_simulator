<?xml version="1.0"?>
<robot name="msd_tunnel_dtw" xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <xacro:macro name="drive_wheel" params="parent prefix xyz">
    <joint name="${prefix}_joint" type="continuous">
      <origin xyz="${xyz}" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child  link="${prefix}_link"/>
      <axis xyz="0 1 0" />
    </joint>
    
    <transmission name="${prefix}_trans" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
        <actuator name="${prefix}_motor">
          <mechanicalReduction>1</mechanicalReduction>
        </actuator>
      <joint name="${prefix}_joint">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>

    <link name="${prefix}_link">
      <inertial>
        <mass value="3.5"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://msd_simulator/model/meshes/msd_tunnel/drive_wheel.dae"/>
        </geometry>
        <material name="red"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.57 0 0"/>
        <geometry>
          <cylinder radius="0.1105" length="0.076" />
        </geometry>
      </collision>
    </link>
    <gazebo reference="${prefix}_link">
      <material>Gazebo/Red</material>
      <mu1 value="1.0" />
      <mu2 value="1.0" />
      <kp value="10000000" />
      <kd value="10" />
    </gazebo>
  </xacro:macro> 
  
  <xacro:macro name="roller" params="prefix xyz">
    <joint name="${prefix}_joint" type="fixed">
      <parent link="base_link"/>
      <child  link="${prefix}_link"/>
      <origin xyz="${xyz}" rpy="0 0 0"/>
    </joint>
    <link name="${prefix}_link">
      <inertial>
        <mass value="1.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://msd_simulator/model/meshes/msd_tunnel/roller.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <geometry>
          <cylinder radius="0.055" length="0.076" />
        </geometry>
        <material name="gray" />
      </collision>
    </link>
    <gazebo reference="${prefix}_link">
      <material>Gazebo/Gray</material>
      <mu1 value="0.1" />
      <mu2 value="0.1" />
      <kp value="10000000" />
      <kd value="10" />
    </gazebo>
  </xacro:macro>

  <link name="base_link"/>

  <joint name="body_joint" type="fixed">
    <parent link="base_link"/>
    <child  link="body_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="body_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="182.8"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://msd_simulator/model/meshes/msd_tunnel/body.dae" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.250" rpy="0 0 0" />
      <geometry>
        <box size="0.800 0.480 0.400" />
      </geometry>
    </collision>
  </link>
  <gazebo reference="body_link">
    <material>Gazebo/Gray</material>
  </gazebo>


  <xacro:drive_wheel prefix="left_wheel"  parent="base_link" xyz="-0.2575 0.300 0.1105"/>
  <xacro:drive_wheel prefix="right_wheel" parent="base_link" xyz="-0.2575 -0.300 0.1105"/>
  <!-- -0.2575 -300 0.053 -->

  <xacro:roller prefix="left_front" xyz="0.287 0.295 0.055"/>
  <xacro:roller prefix="left_center" xyz="0.0175 0.295 0.055"/>

  <xacro:roller prefix="right_front" xyz="0.287 -0.295 0.055"/>
  <xacro:roller prefix="right_center" xyz="0.0175 -0.295 0.055"/>


  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/msd_tunnel_dtw</robotNamespace>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
      <legacyModeNS>true</legacyModeNS>
    </plugin>
  </gazebo>
</robot>